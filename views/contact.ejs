<%- include("partials/header.ejs")%>
<section id="contact">
  <nav class="container" style="padding-bottom: 0;">
    <a id="home-link" href="/">Home</a>
  </nav>
  <section class="hero" style="height: 30vh; min-height: 180px;">
    <div class="hero-content">
      <h1>Contact Us</h1>
    </div>
  </section>
  <main class="container" style="max-width: 600px;">
    <form action="/contact" method="POST" autocomplete="off">
      <div style="margin-bottom: 1.5rem;">
        <label for="name" style="display:block; margin-bottom:0.5rem; color:var(--text-light);">Name</label>
        <input type="text" id="name" name="name" required placeholder="Your name">
      </div>
      <div style="margin-bottom: 1.5rem;">
        <label for="email" style="display:block; margin-bottom:0.5rem; color:var(--text-light);">Email</label>
        <input type="email" id="email" name="email" required placeholder="you@email.com">
      </div>
      <div style="margin-bottom: 1.5rem;">
        <label for="message" style="display:block; margin-bottom:0.5rem; color:var(--text-light);">Message</label>
        <textarea id="message" name="message" rows="5" required placeholder="How can we help?"></textarea>
      </div>
      <button type="submit">Send Message</button>
    </form>
    <div style="margin-top:2rem; color:var(--text-light); font-size:1rem;">
      Or email us directly at <a href="mailto:info@capstoneblog.com" class="text-decoration">info@capstoneblog.com</a>
    </div>
  </main>
</section>
<%- include('partials/footer.ejs') %>